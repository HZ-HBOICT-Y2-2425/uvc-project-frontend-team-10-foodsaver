{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Disable this if you're using React 17+ (auto JSX transform)
    "react/prop-types": "off",         // Optional: Disable prop-types rule if using TypeScript or not using them
    "no-unused-vars": "warn",
    "no-extra-boolean-cast": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"  // Automatically detect the React version
    }
  }
}
